# Application
APP_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=klosetlab_embeddings
QDRANT_USE_HTTPS=false
QDRANT_PREFER_GRPC=false

# Redis (AI Service)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=klosetlab-ai-storage

# HuggingFace
HF_HOME=./models
HF_TOKEN=

# Models
UPSTAGE_API_KEY=your_upstage_api_key_here
EMBEDDING_MODEL=solar-embedding-1-large-passage
CAPTION_MODEL=Salesforce/blip-image-captioning-base

# AI Model Server (GCP / On-Premise)
AI_MODEL_SERVER_URL=http://localhost:8000
USE_MOCK_VALIDATOR=true  # true: Mock 모드, false: 실제 AI 서버 호출
